unit unitDesafio6;

interface

uses
  Windows, Messages, SysUtils, Classes, Graphics, Controls, Forms, Dialogs,
  StdCtrls;

type
  TfrmDesafio6 = class(TForm)
    btnCriarBotao: TButton;
    procedure btnCriarBotaoClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
  private
    { Private declarations }
    FContadorBotoes: Integer;
    FArrayBotoes: TList;
    procedure CriarNovoBotao(PosX, PosY: Integer);
    procedure BotaoClick(Sender: TObject);
  public
    { Public declarations }
  end;

var
  frmDesafio6: TfrmDesafio6;

implementation

{$R *.DFM}

procedure TfrmDesafio6.FormCreate(Sender: TObject);
begin
  FContadorBotoes := 0;
  FArrayBotoes := TList.Create;

  // Configura o botão inicial
  if Assigned(btnCriarBotao) then
    btnCriarBotao.Caption := 'Iniciar';
end;

procedure TfrmDesafio6.FormDestroy(Sender: TObject);
var
  i: Integer;
  Btn: TButton;
begin
  if Assigned(FArrayBotoes) then
  begin
    for i := FArrayBotoes.Count - 1 downto 0 do
    begin
      if Assigned(FArrayBotoes[i]) then
      begin
        Btn := TButton(FArrayBotoes[i]);
        FArrayBotoes[i] := nil;
        Btn.Free;
      end;
    end;
    FreeAndNil(FArrayBotoes);
  end;
end;

procedure TfrmDesafio6.CriarNovoBotao(PosX, PosY: Integer);
var
  NovoBotao: TButton;
begin
  if not Assigned(FArrayBotoes) then Exit;

  Inc(FContadorBotoes);

  // Cria um novo botão
  NovoBotao := TButton.Create(Self);
  try
    with NovoBotao do
    begin
      Name := 'btnDinamico' + IntToStr(FContadorBotoes); // Nome único para cada botão
      Parent := Self;
      Left := PosX + 100;
      Top := PosY + 30;
      Width := 75;
      Height := 35;
      Caption := IntToStr(FContadorBotoes);
      OnClick := BotaoClick;

      // Verifica se o botão não está muito à direita ou embaixo
      if Left > Self.ClientWidth - Width - 20 then
        Left := 20;
      if Top > Self.ClientHeight - Height - 20 then
        Top := 50;
    end;

    FArrayBotoes.Add(NovoBotao);
  except
    NovoBotao.Free;
    raise;
  end;
end;

procedure TfrmDesafio6.CriarNovoBotao(PosX, PosY: Integer);
begin
  if not Assigned(FArrayBotoes) then Exit;

  Inc(FContadorBotoes);

  // Cria um novo botão
  NovoBotao := TButton.Create(Self);
  try
    with NovoBotao do
    begin
      Name := 'btnDinamico' + IntToStr(FContadorBotoes); // Nome único para cada botão
      Parent := Self;
      Left := PosX; // Use a posição passada
      Top := PosY + (FContadorBotoes - 1) * (Height + 10); // Empilha verticalmente
      Width := 75;
      Height := 35;
      Caption := IntToStr(FContadorBotoes);
      OnClick := BotaoClick;

      // Verifica se o botão não está muito à direita ou embaixo
      if Left > Self.ClientWidth - Width - 20 then
        Left := 20;
      if Top > Self.ClientHeight - Height - 20 then
        Top := 20 + (FContadorBotoes - 1) * (Height + 10); // Mantém dentro do formulário
    end;

    FArrayBotoes.Add(NovoBotao);
  except
    NovoBotao.Free;
    raise;
  end;
end;

procedure TfrmDesafio6.BotaoClick(Sender: TObject);
begin
  if (Sender is TButton) and Assigned(Sender) then
  begin
    try
      ShowMessage('Botão ' + TButton(Sender).Caption + ' criará um novo botão!');
      btnCriarBotaoClick(Sender);
    except
      on E: Exception do
        ShowMessage('Erro ao criar novo botão: ' + E.Message);
    end;
  end;
end;

end.
